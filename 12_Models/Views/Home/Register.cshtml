@model _12_Models.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}
<div class="row">
    <div class="col-3"></div>
    <div class="col-6">
        <h2>Register</h2>

        <form action="/Home/Register" method="post">
            @Html.ValidationSummary(true)
            <div class="mb-3">
                <input type="text" class="form-control" name="name" value="@Model.Name" placeholder="*Adınız..">
                @Html.ValidationMessageFor(i => i.Name, "İsim yaz UNUTMA!", new { @class = "text-danger" })
            </div>
            <div class="mb-3">
                <input type="text" class="form-control" name="surname" value="@Model.Surname" placeholder="Soyadınız..">
                @Html.ValidationMessageFor(a => a.Surname, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                <input type="text" class="form-control" name="address" value="@Model.Address" placeholder="Adresiniz..">
                @Html.ValidationMessageFor(a => a.Address, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                <input type="email" class="form-control" name="email" value="@Model.Email" placeholder="Email Adresiniz..">
                @Html.ValidationMessageFor(a => a.Email, "", new { @class = "text-danger" })
            </div>
            <div class="mb-3">
                <input type="text" class="form-control" name="username" value="@Model.Username" placeholder="Kullanıcı adınız..">
                @Html.ValidationMessageFor(a => a.Username, "", new { @class = "text-danger" })
            </div>
            <div class="mb-3">
                <input type="password" class="form-control" name="password" value="@Model.Password" placeholder="Şifreniz..">
            </div>
            <div class="mb-3">
                <input type="password" class="form-control" name="repassword" value="@Model.RePassword" placeholder="Tekrar Şifreniz..">
            </div>
            <button type="submit" class="btn btn-primary">KAYIT OL</button>
        </form>
    </div>
    <div class="col-3"></div>
</div>
